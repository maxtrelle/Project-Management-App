<div class="card border-0 shadow-sm">
  <div class="card-body">

    <div class="row mb-4">
      <div class="col-md-8 col-lg-9">
        <div class="card-title">
          <h1>My Projects</h1>
        </div>
      </div>
      <div class="col-md-4 col-lg-3 text-md-right">
        <%= link_to 'New Project', new_project_path, class: 'btn btn-lg btn-primary' %> 
      </div>
    </div>

    <% @projects.each do |project| %>
      <article class="card shadow-sm mb-3">
        <div class="progress" style="height: 3px;">
          <div class="progress-bar bg-success" role="progressbar" style="width: <%= project.percent_complete %>%;" aria-valuenow="<%= project.percent_complete %>" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="card-body">

          <div class="row">

            <div class="col-md-7 col-lg-8">
              <div class="mb-3">
                <span class="badge badge-<%= project.task_color %>"><%= project.status %> <%= project.percent_complete %>%</span>
                <small class="text-secondary">
                   complete
                  (<%= project.total_complete %> / <%= project.total_tasks %>)
                </small>
              </div>
              
              <p class="h4"><%= link_to project.name, project %></p>
            </div>

            <div class="col-md-5 col-lg-4 d-flex align-items-center justify-content-md-end">
              <%= link_to project, class: 'btn btn-outline-secondary mr-2' do %>
                <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"/>
                  <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                </svg>
              <% end %>
              <%= link_to edit_project_path(project), class: 'btn btn-outline-secondary mr-2' do %>
                <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                </svg>
              <% end %>
              <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary' do %>
                <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
              <% end %>
            </div>

          </div>

        </div>
      </article>
    <% end %>

  </div>
</div>
